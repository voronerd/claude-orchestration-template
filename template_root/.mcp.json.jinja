{
  "mcpServers": {
{% set comma = [] %}
{% if has_local_llm %}
    "ollama": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "ollama-mcp"
      ],
      "env": {
        "OLLAMA_HOST": "{{ ollama_endpoint }}"
      }
    }
{% if comma.append(1) %}{% endif %}
{% endif %}
{% if has_reasoning_model %}
{% if comma %},{% endif %}
{% if not comma %}{% if comma.append(1) %}{% endif %}{% endif %}
    "reasoning": {
      "type": "stdio",
      "command": "node",
      "args": [
        "${PROJECT_ROOT}/mcp-servers/reasoning-mcp/dist/index.js"
      ],
      "env": {
        "REASONING_API_BASE": "{{ reasoning_endpoint }}",
        "REASONING_MODEL": "{{ reasoning_model_name }}",
        "REASONING_API_KEY": "not-needed"
      }
    }
{% endif %}
{% if include_multi_model_overseer %}
{% if comma %},{% endif %}
{% if not comma %}{% if comma.append(1) %}{% endif %}{% endif %}
    "gemini": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@rlabs-inc/gemini-mcp"
      ],
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "VERBOSE": "true"
      }
    },
    "openai": {
      "type": "stdio",
      "command": "node",
      "args": [
        "${PROJECT_ROOT}/mcp-servers/openai-mcp/dist/index.js"
      ],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    }{% if include_grok_agent %},
    "grok": {
      "type": "stdio",
      "command": "node",
      "args": [
        "${PROJECT_ROOT}/mcp-servers/grok-mcp/dist/index.js"
      ],
      "env": {
        "GROK_API_KEY": "${GROK_API_KEY}"
      }
    }{% endif %}
{% endif %}
{% if include_exa %}
{% if comma %},{% endif %}
{% if not comma %}{% if comma.append(1) %}{% endif %}{% endif %}
    "exa": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "exa-mcp-server"
      ],
      "env": {
        "EXA_API_KEY": "${EXA_API_KEY}"
      }
    }
{% endif %}
{% if include_context7 %}
{% if comma %},{% endif %}
{% if not comma %}{% if comma.append(1) %}{% endif %}{% endif %}
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {}
    }
{% endif %}
{% if has_model_router %}
{% if comma %},{% endif %}
{% if not comma %}{% if comma.append(1) %}{% endif %}{% endif %}
    "model-router": {
      "type": "stdio",
      "command": "node",
      "args": [
        "${PROJECT_ROOT}/mcp-servers/model-router-mcp/dist/index.js"
      ],
      "env": {
        "MODEL_ROUTER_URL": "{{ model_router_url }}",
        "OPENAI_API_KEY": "unused"
      }
    }
{% endif %}
  }
}
