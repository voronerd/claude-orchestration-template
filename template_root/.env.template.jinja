# .env.template - Copy to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# REQUIRED - Claude Code will not work without this
# ============================================

# Anthropic API key (get from console.anthropic.com)
ANTHROPIC_API_KEY=your-anthropic-key-here

{% if include_multi_model_overseer %}
# ============================================
# MULTI-MODEL REVIEW PANEL
# ============================================

# Google AI API key (for @gemini-overseer)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI API key (for @openai-overseer)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
{% if include_grok_agent %}

# xAI Grok API key (for @grok devil's advocate)
# Get from: https://console.x.ai/
GROK_API_KEY=
{% endif %}
{% endif %}
{% if include_exa %}

# ============================================
# WEB SEARCH (Exa)
# ============================================

# Exa API key (for web search in @overseer)
# Get from: https://exa.ai/
EXA_API_KEY=
{% endif %}
{% if has_model_router %}

# ============================================
# LOCAL MODEL ROUTING
# ============================================

# Model router endpoint (for local LLM routing via vLLM/etc)
MODEL_ROUTER_URL={{ model_router_url }}
{% endif %}

# ============================================
# PROJECT PATHS
# ============================================

PROJECT_NAME='{{ project_name }}'
# Set automatically by bootstrap.sh (do not hardcode)
PROJECT_ROOT=
